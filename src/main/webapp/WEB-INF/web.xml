<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>SmartPhoneShop</display-name>
    <servlet>
    	<description>
    	</description>
    	<display-name>HomeController</display-name>
    	<servlet-name>HomeController</servlet-name>
    	<servlet-class>com.huy.controller.HomeController</servlet-class>
    </servlet>
    <servlet>
    	<description>
    	</description>
    	<display-name>AccountController</display-name>
    	<servlet-name>AccountController</servlet-name>
    	<servlet-class>com.huy.controller.AccountController</servlet-class>
    </servlet>
    <servlet>
    	<description>
    	</description>
    	<display-name>CheckoutController</display-name>
    	<servlet-name>CheckoutController</servlet-name>
    	<servlet-class>com.huy.controller.CheckoutController</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>HomeController</servlet-name>
    	<url-pattern>/home.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>AccountController</servlet-name>
    	<url-pattern>/account.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>CheckoutController</servlet-name>
    	<url-pattern>/checkout.do</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        </welcome-file-list>
    </web-app>
